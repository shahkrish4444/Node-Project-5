<%- include('../Partials/Header.ejs') -%>
    <div class="ms-300 mt-80">
        <div class="m-4 w-300">
            <div class="bg-light text-dark px-3 py-4 rounded-4 d-flex">
                <form id="addMovieForm" action="/upload" method="post" enctype="multipart/form-data" class="form">
                    <h4 class="text-dark mb-4 text-center">ADD MOVIE</h4>
                    <p id="error" class="mb-4 text-center text-danger"></p>
                    <input type="text" placeholder="Title" class="form-control mb-3 col-6" name="title" id="title">
                    <textarea name="dsc" id="dsc" class="form-control mb-3" placeholder="Description"></textarea>
                    <div class="mb-3 col-6">
                        <label for="" class="me-3 text-dark mb-2">Release Date : </label>
                        <input type="date" class="form-control" name="releaseDate" id="date">
                    </div>
                    <select name="genres" id="genres" class="form-select mb-3">
                        <option value="">Select Genres</option>
                        <option value="Horror">Horror</option>
                        <option value="Western">Western</option>
                        <option value="Drama">Drama</option>
                        <option value="Action">Action</option>
                        <option value="Adventure">Adventure</option>
                        <option value="Comedy">Comedy</option>
                        <option value="Thriller">Thriller</option>
                        <option value="Narrative">Narrative</option>
                        <option value="Historical Fiction">Historical Fiction</option>
                        <option value="Fairy Tale">Fairy Tale</option>
                        <option value="Essay">Essay</option>
                        <option value="Biography">Biography</option>
                        <option value="Anime">Anime</option>
                    </select>
                    <select name="rating" id="rating" class="form-select mb-3">
                        <option value="">Select Rating</option>
                        <option value="⭐">1</option>
                        <option value="⭐⭐">2</option>
                        <option value="⭐⭐⭐">3</option>
                        <option value="⭐⭐⭐⭐">4</option>
                        <option value="⭐⭐⭐⭐⭐">5</option>
                        <option value="⭐⭐⭐⭐⭐⭐">6</option>
                        <option value="⭐⭐⭐⭐⭐⭐⭐">7</option>
                        <option value="⭐⭐⭐⭐⭐⭐⭐⭐">8</option>
                        <option value="⭐⭐⭐⭐⭐⭐⭐⭐⭐">9</option>
                        <option value="⭐⭐⭐⭐⭐⭐⭐⭐⭐⭐">10</option>
                    </select>
                    <label for="" class="me-3 text-dark mb-2">Movie Poster : </label>
                    <img id="imagePreview" src="#" alt="Image preview" style="display: none;" width="50px" height="50px"
                        class="mb-3 rounded-circle" />
                    <input type="file" class="form-control mb-3" name="movie" id="movieImage">
                    <button class="btns mt-3">ADD</button>
                </form>
            </div>
        </div>
    </div>
    <script>
        document.getElementById('addMovieForm').onsubmit = function (event) {
            var title = document.getElementById('title').value;
            var dsc = document.getElementById('dsc').value;
            var date = document.getElementById('date').value;
            var genres = document.getElementById('genres').value;
            var rating = document.getElementById('rating').value;
            var movieImage = document.getElementById('movieImage').value;

            if (!title || !dsc || !date || !genres || !rating || document.getElementById('movieImage').files.length === 0) {
              
                alert("Please Fill all The Details ..")
                event.preventDefault();
            } else {
               
            }

        };
    </script>
    <%- include('../Partials/Footer.ejs') -%>